modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Dream Journal"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Dreams"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reset Database"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Seed Database"

[[workflows.workflow]]
name = "Flask Dream Journal"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Add Sample Dreams"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 add_sample_dreams.py"

[[workflows.workflow]]
name = "Reset Database"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 reset_db.py"

[[workflows.workflow]]
name = "Seed Database"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 seed_data.py"

[deployment]
run = ["sh", "-c", "python3 main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
